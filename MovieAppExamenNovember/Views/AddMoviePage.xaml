<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieAppExamenNovember.Views.AddMoviePage"
             xmlns:viewmodel="clr-namespace:MovieAppExamenNovember.ViewModels"
             x:DataType="viewmodel:MoviePageViewModel"
             Title="Film Toevoegen">
    <VerticalStackLayout Padding="10">
        <Entry Placeholder="Title" Text="{Binding Movie.title}"/>
        <Entry Placeholder="Director" Text="{Binding Movie.director}"/>
        <Entry Placeholder="Producer" Text="{Binding Movie.producer}"/>
        
        <Button Text="Toevoegen" Command="{Binding SaveMovieCommand}"/>
    </VerticalStackLayout>
</ContentPage>